<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FECF69"
    tools:context=".UserProfile">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:contentDescription="Back Button"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Profile"
            android:textColor="#6A0080"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp" >

    <ImageView
        android:id="@+id/ic_credit_score_"
        android:layout_width="256dp"
        android:layout_height="231dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_credit_score"
        android:contentDescription="Budget Illustration" />

        <Button
            android:id="@+id/pp_buttonedi"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:text="Edit"
            android:textAlignment="center"
            android:textColor="#6A0080"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pp_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:text="Email"
            android:textColor="#6A0080"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pp_disemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            android:text="luke77@gmail.com"
            android:textColor="#6A0080"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pp_passw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:text="Password"
            android:textColor="#6A0080"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pp_dispassw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            android:text="*********"
            android:textColor="#6A0080"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>