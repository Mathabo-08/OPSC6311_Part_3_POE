<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDD835"
    tools:context=".BudgetActivity">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Back Button"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="What is a Budget"
            android:textAlignment="center"
            android:textColor="#6A0080"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp" > <ImageView
            android:id="@+id/ic_credit_score_"
            android:layout_width="256dp"
            android:layout_height="231dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/icon_budget_fin"
            android:contentDescription="Budget Illustration" />

            <TextView
                android:id="@+id/textView_budget_explaination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:text="A small business, like a local coffee shop, would also have a budget.\n\nIncome: Sales from coffee, pastries, and other items.\nExpenses: Rent for the shop, salaries for employees, cost of ingredients (coffee beans, milk, sugar), utilities, marketing, equipment maintenance, and taxes. Their budget helps them see if they're selling enough to cover their costs, where they might be spending too much, and how much profit they can expect to make. This allows them to plan for future growth or make adjustments if they're not meeting their financial targets."
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_example_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Example"
                android:textAlignment="center"
                android:textColor="#6A0080"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_budget_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:text="A budget is essentially a financial plan that helps you manage your money. It's like a roadmap for your income and expenses over a specific period, such as a month or a year. The main idea is to understand how much money you have coming in (your income) and how much money you have going out (your expenses). By tracking this, you can make informed decisions about your spending, saving, and debt repayment, ultimately helping you reach your financial goals and avoid running out of money."
                android:textColor="#090909"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>