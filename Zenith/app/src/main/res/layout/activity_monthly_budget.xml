<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#582B7B"
    tools:context=".MonthlyBudget">

    <!-- Fixed Bottom Navigation Bar (Moved to top of RelativeLayout for layering) -->
    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#7A44A0"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Home navigation item -->
        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Home"
                android:padding="8dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#fecf69"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Expenses navigation item -->
        <LinearLayout
            android:id="@+id/expensesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Expenses"
                android:padding="8dp"
                android:src="@drawable/ic_expenses" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" View Expenses"
                android:textColor="#fecf69"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Goals navigation item -->
        <LinearLayout
            android:id="@+id/goalsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Goals"
                android:padding="8dp"
                android:src="@drawable/ic_goals" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:textColor="#fecf69"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Education navigation item -->
        <LinearLayout
            android:id="@+id/educationButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Education"
                android:padding="8dp"
                android:src="@drawable/ic_education" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textColor="#fecf69"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ScrollView for main content. Now fills space above bottomNavigationBar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationBar"
        android:padding="16dp">

        <!-- Primary LinearLayout as child of ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header section with title and action icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/monthlyBudgetTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Monthly Budget Overview"
                    android:textAlignment="center"
                    android:textColor="#FDD835"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/settingsIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Settings"
                    android:padding="12dp"
                    android:src="@drawable/ic_settings" />

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Profile"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_placeholder" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL BUDGET"
                android:textColor="#fecf69"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalAllocatedAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R 0.00"
                android:textColor="#c1ff72"
                android:textSize="18sp" />

                <TextView
                    android:id="@+id/totalSpentAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="R 0.00"
                android:textColor="#c1ff72"
                android:textSize="18sp" />

                <TextView
                    android:id="@+id/totalRemainingAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="R 0.00"
                android:textColor="#c1ff72"
                android:textSize="18sp" />
            </LinearLayout>

            <!-- Custom ProgressBar instead of two Views -->
            <ProgressBar
                android:id="@+id/budgetProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:progressDrawable="@drawable/custom_progress_bar"
                android:max="100"
                android:progress="0" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- REPLACED static budget category blocks with RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/budgetsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/budget_item" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Budget warning and action button section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/overallOverspentWarning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Overall Budget Overspent: R0.00."
                android:textColor="#ff3131"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

                <Button
                    android:id="@+id/updateBudgetButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFDA63"
                    android:minWidth="140dp"
                    android:minHeight="48dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Update Budget"
                    android:textColor="#582B7B" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>