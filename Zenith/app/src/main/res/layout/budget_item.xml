<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FDD835"> <!-- Yellow background for each budget item card -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Container for Text Views -->
    <LinearLayout
        android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <!-- Category Title (e.g., "Groceries") -->
    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Allocated Amount -->
    <TextView
        android:id="@+id/allocatedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Allocated : R0.00"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Spent Amount -->
    <TextView
        android:id="@+id/spentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spent : R0.00"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Overspent Warning Message -->
    <TextView
        android:id="@+id/overspentWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="OVERSPENT BY R0.00!"
        android:textColor="#FF0000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" /> <!-- Initially hidden, becomes visible if overspent -->

</LinearLayout>

    <!-- Image View - Placeholder -->

    </LinearLayout>

    </androidx.cardview.widget.CardView>
